<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DiceRoller.Details"
             xmlns:namespace="clr-namespace:DiceRoller.ViewModel"
             x:DataType="namespace:DetailsViewModel"
             Title="Details">
    <VerticalStackLayout>
        <CollectionView ItemsSource="{Binding RollList}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="{}">
                    <Grid Padding="0,5">
                        <Label Text="{Binding RollResult }"/>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>